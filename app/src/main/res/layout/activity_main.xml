<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:id="@+id/rl_background"
    android:background="@color/home_screen_background"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_header"
        android:id="@+id/tv_header"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/home_screen_header_text_color"
        android:textSize="30dp"
    />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/service_running_indicator"
        android:id="@+id/tv_service_running"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/home_screen_service_running_text_color"
        android:textSize="15dp"
        android:visibility="invisible"
    />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivintrepidlogo"
        android:src="@drawable/intrepidicon"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:id="@+id/etName"
        android:textColor="@color/home_screen_input_name"
        android:textColorHint="@color/home_screen_input_name_hint"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/home_screen_input_name_hint"
        android:shadowColor="@color/home_screen_input_name_shadow"
        android:background="@drawable/input_name_edit_text"
    />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/start_tracking_button"
        android:background="@drawable/style_rounded_button"
        android:id="@+id/buttonStartTracking"
        android:onClick="startService"
    />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/stop_tracking_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_rounded_button"
        android:id="@+id/buttonStopTracking"
        android:onClick="stopService"
    />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="- location data -"
        android:id="@+id/tv_location_data"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFFFF"
        android:visibility="gone"
    />

</LinearLayout>
